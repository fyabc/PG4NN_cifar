{
    // How tp set configures in command line
    // When set global configures:
    //  G.key=exp
    // When set policy configures:
    //  P.key=exp
    // When set configures in current model ("cifar10" in CIFAR-10, "imdb" in IMDB):
    //  key=exp
    //
    // key is the name of the parameter, exp is the value.
    // [NOTE]: exp must be a legal Python expression, the value of the key is eval(exp).
    // [NOTE]: in exp, use @ to represent double quotes " (used in string values)
    // [NOTE]: you must NOT have any spaces in the expression above.

    "data_dir": "./data/cifar-10-batches-py",
    "model_file": "./data/cifar10_deep_residual_model.npz",
    "policy_model_file": "./data/policy_model.npz",
    "policy_save_freq": 10,
    "save_model": false,
    "total_size": 60000,
    "train_size": 50000,
    "validation_size": 10000,
    "test_size": 10000,
    "model": null,
    "seed": 1234,
    "floatX": "float32",

    // Train types.
    // 'raw':           train ResNet directly.
    // 'policy':        train policy.
    // 'deterministic': run deterministic policy (alpha loss)
    // 'stochastic':    run stochastic policy (randomly drop data)
    "train_type": "policy",

    "policy": {
        "num_episodes": 100,

        // Policy input features
        "add_label_input": true,
        "add_label": true,
        "use_first_layer_output": false,
        "add_margin": false,
        "add_average_accuracy": false,
        "add_epoch_number": true,
        "add_learning_rate": true,

        "immediate_reward": false,
        "immediate_reward_sample_size": 1000,

        "policy_optimizer": "adam",
        "policy_learning_rate": 0.02,
        "policy_learning_rate_discount": 0.7,
        "policy_learning_rate_discount_freq": 50,
        "reward_baseline_update_rate": 0.1,

        "gamma": 0.9
    },

    "cifar10": {
        "curriculum": false,
        "random_drop": false,
        "random_drop_number_file": "./data/drop_num.txt",

        "use_policy": true,
        "train_epoch_size": 100000,
        "epoch_per_episode": 1,

        "warm_start": false,

        "init_learning_rate": 0.1,
        "learning_rate_discount": 0.1,

        "l2_penalty_factor": 0.0001,
        "momentum": 0.9,

        "train_batch_size": 128,
        "validate_batch_size": 500,
        "cnn_output_size": 10,
        "n": 5,
        "num_epochs": 5000,

        "print_label_distribution": true
    },

    "imdb": {
        "seed": 123,

        "dataset": "imdb",
        "data_dir": "./data/imdb/imdb.pkl",

        "epoch_per_episode": 5000,

        "dim_proj": 128,
        "patience": 10,
        "display_freq": 10,

        "decay_c": 0.0,
        "learning_rate": 0.0001,
        "n_words": 10000,

        "save_to": "./data/imdb/lstm_model.npz",
        "valid_freq": 370,
        "save_freq": 1110,

        "maxlen": 100,

        "train_batch_size": 16,
        "validate_batch_size": 64,

        "optimizer": "adadelta",

        "noise_std": 0.0,
        "reload_model": false,
        "use_dropout": true,
        "test_size": -1
    }
}
